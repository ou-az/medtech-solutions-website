<!-- Hero Section -->
<section class="hero text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in">
                <h1 class="display-4 mb-4">Advanced Medical Systems</h1>
                <p class="lead mb-4">Revolutionizing healthcare with AI-driven solutions and uncompromising security.</p>
                <div class="d-flex gap-3">
                    <a href="/products" class="btn btn-light btn-lg">Explore Solutions</a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">Get in Touch</a>
                </div>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0 fade-in">
                <img src="/images/hero-image.jpg" alt="Medical Technology" class="img-fluid rounded-3 shadow">
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="featured-products py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Products</h2>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-6 mb-4 fade-in">
                    <div class="card h-100">
                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body">
                            <h3 class="card-title h4"><%= product.name %></h3>
                            <p class="card-text mb-4"><%= product.description %></p>
                            <ul class="list-unstyled feature-list mb-4">
                                <% product.features.slice(0, 3).forEach(feature => { %>
                                    <li>
                                        <i class="fas fa-check-circle"></i>
                                        <%= feature %>
                                    </li>
                                <% }) %>
                            </ul>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text mb-0"><strong>Price:</strong> <%= product.price %></p>
                                <a href="/products#<%= product.id %>" class="btn btn-primary">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Us</h2>
        <div class="row g-4">
            <div class="col-md-4 fade-in">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-4"></i>
                        <h4>Advanced Security</h4>
                        <p class="mb-0">Multi-layer encryption and HIPAA compliance for complete data protection.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 fade-in">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-brain fa-3x text-primary mb-4"></i>
                        <h4>AI-Powered</h4>
                        <p class="mb-0">State-of-the-art machine learning algorithms for accurate diagnostics.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 fade-in">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-headset fa-3x text-primary mb-4"></i>
                        <h4>24/7 Support</h4>
                        <p class="mb-0">Round-the-clock expert support for uninterrupted operations.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials py-5">
    <div class="container">
        <h2 class="text-center mb-5">What Our Clients Say</h2>
        <div class="row">
            <% testimonials.forEach(testimonial => { %>
                <div class="col-md-6 mb-4 fade-in">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-4">
                                <img src="<%= testimonial.image %>" alt="<%= testimonial.name %>" class="rounded-circle me-3">
                                <div>
                                    <h5 class="mb-1"><%= testimonial.name %></h5>
                                    <p class="text-muted mb-0"><%= testimonial.role %></p>
                                    <p class="text-muted mb-0"><%= testimonial.organization %></p>
                                </div>
                            </div>
                            <p class="card-text"><em>"<%= testimonial.quote %>"</em></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Transform Your Healthcare Practice?</h2>
        <p class="lead mb-4">Contact us today for a personalized demo of our advanced medical systems.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/contact" class="btn btn-light btn-lg">Get Started</a>
            <a href="/products" class="btn btn-outline-light btn-lg">View Products</a>
        </div>
    </div>
</section>
